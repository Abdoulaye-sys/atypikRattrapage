<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On

    # Determine the RewriteBase automatically and set it as environment variable.
    # If you're using Apache deployments, you may have to manually set this value.
    # Example: RewriteBase /your_project_name
    RewriteCond %{REQUEST_URI}::$0 ^(/.+)/(.*)::\2$
    RewriteRule ^(.*) - [E=BASE:%1]

    RewriteCond %{HTTP:Authorization} .+
    RewriteRule ^ - [E=HTTP_AUTHORIZATION:%0]

    # Redirect to the front controller.
    RewriteCond %{ENV:REDIRECT_STATUS} ^$
    RewriteRule ^index\.php(?:/(.*)|$) %{ENV:BASE}/$1 [R=301,L]

    # If the requested filename exists, simply serve it.
    # Otherwise, forward it to index.php.
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    RewriteRule ^ %{ENV:BASE}/index.php [L]
</IfModule>

# Block access to "hidden" directories whose names begin with a period.
RedirectMatch 404 /\..*$

# Disallow access to the entire project except for public/index.php.
<FilesMatch "^(?!public/index\.php).*$">
    Deny from all
</FilesMatch>
